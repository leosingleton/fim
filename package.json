{
  "name": "@leosingleton/fim",
  "version": "2.0.0-alpha",
  "author": "Leo C. Singleton IV <leo@leosingleton.com>",
  "description": "Fast Image Manipulation Library for JavaScript",
  "homepage": "https://github.com/leosingleton/fim",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/leosingleton/fim.git"
  },
  "devDependencies": {
    "@types/jasmine": "latest",
    "@types/jquery": "latest",
    "@types/node": "latest",
    "@types/webpack": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "copy-webpack-plugin": "latest",
    "eslint": "latest",
    "eslint-config-leosingleton": "leosingleton/eslint-config-leosingleton",
    "eslint-plugin-github": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsdoc": "latest",
    "flow-bin": "latest",
    "glob": "latest",
    "graphql": "latest",
    "jasmine": "latest",
    "jest": "latest",
    "jest-junit": "latest",
    "karma": "latest",
    "karma-chrome-launcher": "latest",
    "karma-edge-launcher": "latest",
    "karma-firefox-launcher": "latest",
    "karma-jasmine": "latest",
    "karma-junit-reporter": "latest",
    "lerna": "latest",
    "ts-jest": "latest",
    "ts-loader": "latest",
    "ts-node": "latest",
    "typescript": "latest",
    "webpack": "latest",
    "webpack-cli": "latest",
    "webpack-glsl-minify": "latest"
  },
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "build": "npx ts-node --project scripts/tsconfig.json ./scripts/build.ts",
    "clean": "rm -rf ./build ./packages/*/build",
    "lint": "npx eslint . --ext js,ts",
    "test": "npm run test:node && npm run test:browser",
    "test:browser": "npx webpack --config=webpack.karma.js && npx karma start",
    "test:browser:debug": "npx webpack --config=webpack.karma.js && npx karma start --single-run=false --browsers Chrome",
    "test:node": "npx jest",
    "test:node:xvfb": "xvfb-run -s \"-ac -screen 0 1280x1024x24\" npm run test:node"
  }
}
