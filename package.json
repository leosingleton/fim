{
  "name": "@leosingleton/fim",
  "version": "1.3.3-alpha",
  "author": "Leo C. Singleton IV <leo@leosingleton.com>",
  "description": "Fast Image Manipulation Library for JavaScript",
  "homepage": "https://github.com/leosingleton/fim",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/leosingleton/fim.git"
  },
  "devDependencies": {
    "@types/jasmine": "latest",
    "@types/jest": "latest",
    "@types/jquery": "latest",
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "copy-webpack-plugin": "latest",
    "eslint": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsdoc": "latest",
    "glob": "latest",
    "jasmine-core": "latest",
    "jest": "latest",
    "jest-junit": "latest",
    "jquery": "latest",
    "karma": "latest",
    "karma-chrome-launcher": "latest",
    "karma-edge-launcher": "latest",
    "karma-firefox-launcher": "latest",
    "karma-jasmine": "latest",
    "karma-junit-reporter": "latest",
    "ts-jest": "latest",
    "ts-loader": "latest",
    "typescript": "latest",
    "webpack": "latest",
    "webpack-cli": "latest"
  },
  "dependencies": {
    "@leosingleton/commonlibs": "latest",
    "webpack-glsl-minify": "latest"
  },
  "scripts": {
    "build": "npx webpack --mode=none",
    "lint": "npx eslint \"**/*.ts\" \"**/*.js\"",
    "samples": "cd samples && npx webpack",
    "test": "npm run test:node && npm run test:web",
    "test:all": "npm run test:node && npm run test:web:all",
    "test:node": "npx jest --config=jest.node.config.js --maxWorkers=2 --coverage",
    "test:web": "npx webpack --mode=development --config=webpack.test.js && npx karma start",
    "test:web:debug": "npx webpack --mode=development --config=webpack.test.js && npx karma start --single-run=false --browsers Chrome",
    "test:web:all": "npx webpack --mode=development --config=webpack.test.js && npx karma start --browsers ChromeHeadless,Edge,Firefox"
  },
  "files": [
    "build/dist/"
  ],
  "main": "build/dist/index.js",
  "types": "build/dist/index.d.ts"
}
