  "repository": {
    "type": "git",
    "url": "https://github.com/leosingleton/fim.git"
  },
  "devDependencies": {
    "@types/bootstrap": "^5.2.5",
    "@types/glob": "^8.0.0",
    "@types/jasmine": "^4.3.0",
    "@types/jquery": "^3.5.14",
    "@types/node": "^22.13.4",
    "@types/offscreencanvas": "2019.6.4",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.25.0",
    "eslint-config-leosingleton": "leosingleton/eslint-config-leosingleton",
    "eslint-plugin-github": "^4.4.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.6",
    "flow-bin": "^0.188.2",
    "glob": "^8.0.3",
    "graphql": "^16.6.0",
    "jasmine": "^4.4.0",
    "jest": "^29.1.2",
    "jest-junit": "^14.0.1",
    "karma": "^6.4.1",
    "karma-chrome-launcher": "^3.1.1",
    "karma-edge-launcher": "^0.4.2",
    "karma-firefox-launcher": "^2.1.2",
    "karma-jasmine": "^5.1.0",
    "karma-junit-reporter": "^2.0.1",
    "lerna": "^5.6.2",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typescript": "4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-glsl-minify": "^1.5.0"
  },
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "build": "npx ts-node --project scripts/tsconfig.json ./scripts/build.ts && npm run size",
    "clean": "rm -rf ./build ./packages/*/build",
    "lint": "npx eslint . --ext js,ts",
    "npm-upgrade": "rm -rf ./package-lock.json ./packages/*/package-lock.json ./node_modules ./packages/*/node_modules && npm install && npm run bootstrap",
    "size": "ls -l packages/fim-samples/build/*.js",
    "test": "npm run test:node && npm run test:browser",
    "test:browser": "npx webpack --config=webpack.karma.js && npx karma start",
    "test:browser:debug": "npx webpack --config=webpack.karma.js && npx karma start --single-run=false --browsers Chrome",
    "test:node": "npx jest",
    "test:node:xvfb": "xvfb-run -s \"-ac -screen 0 1280x1024x24\" npm run test:node"
  }
}
